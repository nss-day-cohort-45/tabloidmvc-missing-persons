@model TabloidMVC.Models.ViewModels.CommentViewModel

@{
    ViewData["Title"] = "Create";
}
<div class="container pt-5">
    <h1>Create</h1>

    <h4>Comment</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Comment.Subject" class="control-label"></label>
                    <input asp-for="Comment.Subject" class="form-control" />
                    <span asp-validation-for="Comment.Subject" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Comment.Content" class="control-label"></label>
                    <input asp-for="Comment.Content" class="form-control" />
                    <span asp-validation-for="Comment.Content" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" >Back to All Comments</a>
    </div>
  
</div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
